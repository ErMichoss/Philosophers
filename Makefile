clean:
	@echo "${RED} borrando${DEF_COLOR}"
	@$(RM) $(OBJS)
	@echo "${GREEN} borrado con exito :D${DEF_COLOR}"

fclean: clean
	@$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
