NAME = philo

CC = gcc

CFLAGS = -Wall -Werror -Wextra -g3 -fsanitize=thread

RM = rm -f

DEF_COLOR =		\033[0;39m
GRAY =			\033[0;90m
RED =			\033[0;91m
GREEN =			\033[0;92m
YELLOW =		\033[0;93m
BLUE =			\033[0;94m
MAGENTA =		\033[0;95m
CYAN =			\033[0;96m
WHITE =			\033[0;97m
BLACK =			\033[0;99m
ORANGE =		\033[38;5;209m
BROWN =			\033[38;2;184;143;29m
DARK_GRAY =		\033[38;5;234m
MID_GRAY =		\033[38;5;245m
DARK_GREEN =	\033[38;2;75;179;82m
DARK_YELLOW =	\033[38;5;143m

LIB = ar rcs

SRCS = src/main.c \
		src/error.c \
		src/ft_isnum.c \
		src/set_parameters.c \
		src/philo.c \
		src/ft_init.c \
		src/philo_utils.c

OBJS = $(SRCS:.c=.o)

.c.o:
			@echo "${DARK_GREEN} :3 $(ORANGE)Compilando ${YELLOW}--> $(GREEN)$< $(DEF_COLOR)"
			@${CC} ${CFLAGS} -c $< -o ${<:.c=.o}

all: $(NAME)

